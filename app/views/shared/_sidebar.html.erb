<div class="panel">
  <%= form_tag search_article_index_path , :method => :get do %>
  <div class="input-group" id="search-id" >
    <input type="text" class="form-control" name="q" value="<%= params[:q] %>" placeholder="Search">
    <div class="input-group-btn">
      <button class="btn btn-default" type="submit">
        <i class="glyphicon glyphicon-search"></i>
      </button>
    </div>
  </div>
  <% end %>
  <div class="panel-body text-info">
    <h5 class="panel-title">标签</h5>
    <p class="panel-text">
      <% @tags.each do |t|%>
        <% if t.articles.size > 0%>
        <div class="tags">
          <a href="<%=tag_index_path(:tag_name => t.tag_name)%>"><%=t.tag_name%> <span class="badge"><%=t.articles.size.to_s%></span></a>
        </div>
        <%end%>
      <%end%>
    </p>
  </div>
</div>