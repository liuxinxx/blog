<div class="panel border-info mb-3">
  <div class="panel-body text-info">
    <h5 class="panel-title">标签</h5>
    <p class="panel-text">
      <% @tags.each do |t|%>
      <% if t.articles.size > 0%>
      <div class="tags">
        <a href="<%=tag_index_path(:tag_name => t.tag_name)%>"><%=t.tag_name%> <span class="badge"><%=t.articles.size.to_s%></span></a>
      </div>
      <%end%>
      <%end%>
    </p>
  </div>
</div>