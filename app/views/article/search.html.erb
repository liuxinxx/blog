<div class="col-md-9" id='main'>

  <% if @query_string.blank? %>
  <div class="card">
    <div class="card-body" align="center">
      <h2 class="search-info-title">搜索信息不能为空，请输入关键字搜索</h2>
    </div>
  </div>
  <% elsif @articles.blank?%>
  <div class="card">
    <div class="card-body"  align="center">
      <h2 class="search-info-title">亲，没有搜索到文章哦，要不换个关键词试试？</h2>
    </div>
  </div>
  <% else %>
  <div class="alert alert-primary">
    包含 <font color="#CC3333"><%= @query_string %></font> 的文章有<%= @articles.count %>条
  </div>
  <%= render 'shared/article_list' %>
  <%end%>
</div>
<div class="col-md-3 hidden-mobile">
  <div  id ='topic-sidebar'>
    <%= render 'shared/admin_info' %>
    <%= render 'shared/contact' %>
    <%= render 'shared/tags' %>
  </div>
</div>
<script type="text/javascript">
  var blog = $('.content')
  for (let i = 0; i < blog.size(); i++) {
    var content = $('#' + blog[i].id).data('content')
    $('#' + blog[i].id).html(marked(content.substring(0,content.length-1) + '...'));
  }
</script>