<!DOCTYPE html>
<html>
<head>
  <title>liuxin's blog</title>
  <link href="<%= asset_path('blog_logo.ico')%>" mce_href="<%= asset_path('blog_logo.ico')%>" rel="bookmark" type="image/x-icon" />
  <link href="<%= asset_path('blog_logo.ico')%>" mce_href="<%= asset_path('blog_logo.ico')%>" rel="shortcut icon" type="image/x-icon" />
  <link href="<%= asset_path('blog_logo.ico')%>" mce_href="<%= asset_path('blog_logo.ico')%>" rel="icon" type="image/x-icon" />
  <!-- Global site tag (gtag.js) - Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-124188438-1"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'UA-124188438-1');
  </script>

  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <div id="mainContent">
    <%= render 'shared/header' %>
    <div class="container" style="margin-top: 30px;">
      <div class="row">
        <%= yield %>
      </div>
      <%= render 'shared/footer' %>
    </div>
  </div>
</body>
</html>