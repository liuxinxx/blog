<div  class="container">
  <div class="card card-default">
    <div class="card-body">
      <%= simple_form_for([:admin, @article]) do |f| %>
      <div class="title">

        <%= f.input :title ,label: '标题',input_html: { class: 'form-control'}%>
      </div>
      <%= f.label "正文"%>
      <%= f.text_area :content,rows:30,class: 'form-control'%>
      <span class="hint">支持markdown语法</span>

      <%= f.input :tag,placeholder: '多个标签用逗号隔开',label:'标签',input_html: { class: 'form-control'}%>
      <div style="margin-top: 30px;" align="center">
        <%= f.submit "保存",class:' btn btn-primary btn-lg col-md-6'%>
      </div>
      <% end%>
    </div>
  </div>
</div>