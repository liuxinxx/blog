 @import "bootstrap";
 @import "font-awesome-sprockets";
 @import "font-awesome";
 html,
 body {
  width: 100%;
  height: 100%;
  min-width: 100%;
  min-height: 100%;
  font-size: 1rem;
  font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol";
  font-weight: 410;
  line-height: 1.6;
  color: #333;
  text-align: left;
}
h1,h2,h3,h4,h5,h6{ line-height: 1.5;
}
h1{
  font-size: 2rem;
  letter-spacing: -2px;
  margin-bottom: 20px;
}
h2{
  font-size: 1.6rem;
  letter-spacing: -1px;
  margin-bottom: 20px;
  font-weight: normal;
  color: #444;
}
h3{
  font-size: 1.4rem;
}
h4{
 font-size: 1.2rem;
}
h5{
  font-size: 1.1rem;
}
p{
  font-size: 1rem;
  line-height: 1.5;
}
$gray-medium-light: #eaeaea;
@mixin box_sizing {
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;

  box-sizing:border-box;
}


.logo{
  font-weight: 600;
  font-size: 35px;
  color: #FFF;
}
.articleImg{
  max-width: 100%;
  max-height: 100%;
  border-radius: 4px;
  box-shadow: 0 20px 60px -30px #333;
  margin-bottom: 10px;
  margin-top: 5px;
  padding: 20px;
  background:#fff
}
.articleImgDiv{
   margin: 0;
  padding: 0;
}
#mainContent,#adminMainContent{
  min-height: 100%;
  position:relative;
  padding-bottom: 50px;
  background-color: #f6f6f6;
  background: url(<%= image_url('bg.jpg')%>);
  background-attachment: fixed;
  background-size: cover;
}
.header {
  box-shadow: 10px 10px 60px -25px #999;
  border-radius: 4px;
  background-repeat: no-repeat;
  background-position: center 0;
  -webkit-background-size: cover;
  background-size: cover;
  margin-bottom: 20px;
  padding: 20px;
  text-align: center;
  min-height: 130px;
  color: #FFF;
  position: relative;
}
.logoimg {
  position: absolute;
  left: 1%;
  right: 1%;
  bottom: -34px;
}
#footer {
  width: 100%;
  background-color: transparent;
  position:absolute;
  bottom:0px;
  left:0px;
  height: 50px;
  text-align: center;
  color:#FFF
}
#footer > p{
  font-size: 1.2em;
  color: #000;
  font-weight: 700;
}
#imgCalendar{
  width: 15px;
  height: 15px;
  margin-top: -2px;
}
#imgRead{
  width: 15px;
  height: 15px;
  margin-top: -2px;
}
#imgHome{
  width: 20px;
  height: 20px;
}
pre{
  padding: 0;
  border-radius: 6px;
}
.tags{
  margin: 2px;
  border: 0.1rem solid #EEE;
  line-height: 1.2;
  text-align: center;
  font-size: 13px;
  display: inline-block;
  background: #efefef;
  border-radius: 15px;
  vertical-align: baseline;
  padding: 3px 7px;
}

a:link { text-decoration: none;}
.listRrticleTitle{
  font-size: 1.2em;
  letter-spacing: -1px;
  margin-bottom: 0;
  font-weight: normal;
  color: #444;
}

.sourceInfo{
  border-radius: 8px;
}
.sourceInput{
  width: 100% !important;
  padding: 6px;
}
.statement{
  font-size: 15px;
  margin-top: 10px;
  color: #721c24;
  background-color: #f8d7da;
  border-color: #f5c6cb;
  border-width: 1px;
  border-radius: 8px;
  padding: 10px;
  box-shadow: 0 10px 60px -25px #333;
  line-height: 1.5;
}
.original{
  font-size: 15px;
  margin-top: 10px;
  color: #155724;
  background-color: #d4edda;
  border-color: #c3e6cb;
  border-width: 1px;
  border-radius: 8px;
  padding: 10px;
  box-shadow: 0 10px 60px -25px #333;
  line-height: 1.5;
}
.appreciates_code{
  margin-top: 10px;
  width: 100%;
  height: 100%;
  border-radius: 18px;
  padding: -1;
  border: 0.25em solid #d9a82d;
}
.card{
  box-shadow: 0 10px 60px -35px #efefef;
  border-radius: 6px;
  margin-bottom: 20px;
}


a#weixin {
  position: relative;
}
#weixin img {
  visibility: hidden;
  opacity: 0;
  transform: translate(0, 10px);
  transition: all 0.3s ease-in-out;
  position: absolute;
  right: -60px;
  bottom: -160px;
  width: 150px;
  height: 150px;
  box-shadow: 0 10px 60px -25px #000;
  border-radius: 6px;
  z-index: 99999;
  border: 1px solid rgba(0, 0, 0, 0.125);
}
#weixin:hover img {
  visibility: visible;
  transform: translate(0, 0px);
  opacity: 1;
}

.pay_img{
  width: 180px;
  height: 180px;
}
.pay{
 width: 190px;
 height: 190px;
 box-shadow: 0 10px 60px -35px #000;
 border: 1px solid rgba(0, 0, 0, 0.125);
 border-radius: 8px;
}
.card-header {
  padding: 0.35rem 0.25rem;
  margin-bottom: 0;
  background-color: rgba(0, 0, 0, 0.03);
  border-bottom: 1px solid rgba(0, 0, 0, 0.125);
}

.move-page-buttons {
  position: fixed;
  bottom: 10px;
  right: 10px;
  width: 45px;
  .btn {
    background: #ddd;
  }
  a{
    color:#111
  }
}
.paginate-card{
  border: 0px !important;
  margin-bottom: 0px !important;
}

nav .bg-light {
 background-color: #FFF !important;
}